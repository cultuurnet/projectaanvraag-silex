                            <path fill="none" d="M158.235 60.15h154.636v60.479h-154.636z"/>
                        </svg>

                    </span>

                        {% if event.uitpas_promotions %}
                            {{ event.uitpas_promotions | raw }}
                        {% endif %}

                    {% endif %}

                </dl>

                <dl class="cnw_row">
                    {% if settings.organizer.enabled and event.organizer %}
                        <dt class="cnw_col-3">Organisatie</dt>
                        <dd class="cnw_col-9">{{ event.organizer }}</dd>
                    {% endif %}
                    {% if settings.contact_information and event.contact_info and (event.contact_info.emails or event.contact_info.phone_numbers) %}
                    <dt class="cnw_col-3">Contact</dt>
                    <dd class="cnw_col-9">
                        {% for email in event.contact_info.emails %}
                            <a href="mailto:{{ email }}">{{ email }}</a><br/>
                        {% endfor %}
                        {% for phone_number in event.contact_info.phone_numbers %}
                           {{ phone_number }}<br/>
                        {% endfor %}
                    </dd>
                    {% endif %}

                    {% if settings.contact_information and event.links %}
                    <dt class="cnw_col-3">Links</dt>
                    <dd class="cnw_col-9">
                        {% for link in event.links %}
                            <a href="{{ link }}">{{ link }}</a><br/>
                        {% endfor %}
                    </dd>
                    {% endif %}

                    {% if settings.language_switcher and event.language_switcher|length > 1 %}
                    <dt class="cnw_col-3">Talen</dt>
                    <dd class="cnw_col-9">
                        {% for link in event.language_switcher %}
                            {{ link | raw }}
                        {% endfor %}
                    </dd>
                    {% endif %}

                    {% if event.labels %}
                    <dt class="cnw_col-3">Labels</dt>
                    <dd class="cnw_col-9">
                        {%  for label in event.labels %}
                            <span class="cnw_link__card-tags-item">{{ label }}</span>
                        {% endfor %}
                    </dd>
                    {% endif %}

                    {% if settings.share_buttons and event.share_links %}
                        <dt class="cnw_col-3">Deel deze pagina</dt>
                        <dd class="cnw_col-9">
                            <a href="{{ event.share_links.facebook }}"><i class="fa fa-facebook"></i> Facebook</a>
                            <a href="{{ event.share_links.twitter }}"><i class="fa fa-twitter"></i> Twitter</a>
                            <a href="{{ event.share_links.google_plus }}"><i class="fa fa-google-plus"></i> Google+</a>
                        </dd>
                    {% endif %}

                    {% if settings.back_button.enabled %}
                        <a href="javascript:history.go(-1);">&laquo; {{ settings.back_button.label }}</a>
                    {% endif %}

                </dl>


            </section>


        </div>
    </div>

</div>