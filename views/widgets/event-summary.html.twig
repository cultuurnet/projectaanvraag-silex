<!--  results - CARD  START -->
{% set showIcons = (settings_general.labels_as_icons.enabled or preferredLanguage != 'nl') %}

<div class="cnw_searchresult--block {% if showIcons %} labels-as-icons {% endif %} cnw_row ">
    {% if settings_items.image.enabled %}
    <div class="cnw_col-3 {% if settings_items.image.position == 'right' %} cnw_flex-last {% endif %}">
        {% if event.image is defined %}
        {% if settings_general.detail_link.enabled is not defined or settings_general.detail_link.enabled %}
        <a href="{{ event.detail_link }}" data-click-tracking-category="detail" data-click-tracking-action="{{ click_tracking_action }}" data-click-tracking-label="image">
            <img src="{{ event.image }}" alt="{{ event.name }}" class="cnw_img_responsive {{ settings_items.image.position }}">
        </a>
        {% else %}
            <img src="{{ event.image }}" alt="{{ event.name }}" class="cnw_img_responsive {{ settings_items.image.position }}">
        {% endif %}
        {% endif %}

    </div>
    {% endif %}

    <div class="{% if settings_items.image.enabled %}cnw_col-9 {% else %} cnw_col-12{% endif %}">
        <div class="cnw_card-block ">
            <h2 class="cnw_card-title">
                {% if settings_general.detail_link.enabled is not defined or settings_general.detail_link.enabled %}
                <a href="{{ event.detail_link }}" data-click-tracking-category="detail" data-click-tracking-action="{{ click_tracking_action }}" data-click-tracking-label="title">{{ event.name }}</a>
                {% else %}
                {{ event.name }}
                {% endif %}
                {% if settings_items.editorial_label is defined and settings_items.editorial_label.enabled and event.editorial_label %}
                  <span class="cnw_badge cnw_badge-default cnw_badge-editorial">
                    <i class="cnw-fa cnw-fa-heart"></i>{{ event.editorial_label }}
                  </span>
                {% endif %}
            </h2>
            <span class="cnw_stickers ">
                {% if settings_items.icon_vlieg.enabled and event.vlieg %}
                    <span class="cnw_sticker cnw_sticker--vlieg">
                        <span class="cnw_txt">{{ event.vlieg }}</span>
                    </span>
                {% endif %}
