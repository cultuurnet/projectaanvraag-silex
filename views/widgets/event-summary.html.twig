                {% endif %}
            </span>

            <p class="cnw_card-description">
            {% if settings_items.type.enabled and event.type.0 is defined %}
                <span class="cnw_badge cnw_badge-default" >
                    <i class="cnw-fa cnw-fa-tags" aria-hidden="true"></i>
                    {{ event.typeId | transTo(preferredLanguage, 'eventtype') }}
                </span>
            {% endif %}
            {% if settings_items.theme.enabled %}
                  {% for theme in event.themes %}
                      <span class="cnw_badge cnw_badge-default">
                          <i class="cnw-fa cnw-fa-tags" aria-hidden="true"></i>
                          {{ theme }}
                      </span>
                  {% endfor %}
            {% endif %}
            </p>

            {% if settings_items.description.enabled %}
                <p class="cnw_card-description">
                   {{ event.summary | replace({'&nbsp;': ' '}) }}
                </p>
            {% endif %}

            <div class="list">

                {% if settings_items.where.enabled and event.where %}
                    <div class="list-item">
                    {% if settings_items.where.label is not empty %}
                        <div class="list-item-aside">
                            <em class="cnw_searchresult-detail-label">{{ settings_items.where.label }}</em>
                            <i class="cnw-fa cnw-fa-map-marker"></i>
                        </div>
                        <div class="list-item-content">
                            {% if event.attendanceMode is same as('online') %}
                                {{ 'event_online' | transTo(preferredLanguage) }}
                            {% else %}
                                {{ event.where.name }}{% if event.where.address %},&nbsp;{{ event.where.address.postalcode }}&nbsp;{{ event.where.address.city }}{% endif %}
                            {% endif %}
                        </div>
                     {% else %}
                        <div class="list-item-content">
                            {% if event.attendanceMode is same as('online') %}
                                {{ 'event_online' | transTo(preferredLanguage) }}
                            {% else %}
                                {{ event.where.name }}{% if event.where.address %},&nbsp;{{ event.where.address.postalcode }}&nbsp;{{ event.where.address.city }}{% endif %}
                            {% endif %}
                        </div>
                     {% endif %}
                     </div>
                {% endif %}

                {% if settings_items.organizer.enabled and event.organizer %}
                    <div class="list-item">
                    {% if settings_items.organizer.label is not empty %}
                        <div class="list-item-aside">
                            <em class="cnw_searchresult-detail-label">{{ settings_items.organizer.label }}</em>
                            <i class="cnw-fa cnw-fa-building-o"></i>
                        </div>
                        <div class="list-item-content">{{ event.organizer }}</div>
                    {% else %}
                        <div class="list-item-content">{{ event.organizer }}</div>
                    {% endif %}
                    </div>
                {% endif %}

                {% if settings_items.when.enabled and event.when_summary %}
                    <div class="list-item">
                    {% if settings_items.when.label is not empty %}
                        <div class="list-item-aside">
                            <em class="cnw_searchresult-detail-label">{{ settings_items.when.label }}</em>
                            <i class="cnw-fa cnw-fa-calendar"></i>
                        </div>
                        <div class="list-item-content">
                        {{ event.when_summary }}
                        {% if event.expired %}
                          <p><i>{{ 'event_expired'| transTo(preferredLanguage) }}</i></p>
                        {% endif %}
                        </div>
                    {% else %}
                        <div class="list-item-content">
                        {{ event.when_summary }}
                        {% if event.expired %}
                          <p><i>{{ 'event_expired'| transTo(preferredLanguage) }}</i></p>
                        {% endif %}
                        </div>
                    {% endif %}
                    </div>
                {% endif %}

                {% if settings_items.age.enabled and event.age_range %}
                    <div class="list-item">
                    {% if settings_items.age.label is not empty %}
                        <div class="list-item-aside">
                            <em class="cnw_searchresult-detail-label">{{ settings_items.age.label }}</em>
                            <i class="cnw-fa cnw-fa-male"></i>
                        </div>
                        <div class="list-item-content">{{ event.age_range }}</div>
                    {% else %}
                        <div class="list-item-content">{{ event.age_range }}</div>
                    {% endif %}
                    </div>
                {% endif %}

                {% if settings_items.audience is defined and settings_items.audience.enabled and event.audience is defined and event.audience == "members" %}
                    <div class="list-item">
                    {% if settings_items.audience.label is not empty %}
                        <div class="list-item-aside">
                            <em class="cnw_searchresult-detail-label">{{ settings_items.audience.label }}</em>
                            <i class="cnw-fa cnw-fa-male"></i>
                        </div>
                        <div class="list-item-content">
                          Specifiek voor leden
                        </div>
                    {% else %}
                        <div class="list-item-content">
                          Specifiek voor leden
                        </div>
                    {% endif %}
                    </div>
                {% endif %}

                {% if settings_items.language_icons.enabled and event.language_icons %}
                  <div class="list-item">
                    <div class="list-item-aside">
                        <em class="cnw_searchresult-detail-label">{{ 'event_detail_language_icons'| transTo(preferredLanguage) }}</em>
                        <i class="cnw-fa cnw-fa-language"></i>
                    </div>
                    <div class="list-item-content">{{ event.language_icons | raw }}</div>
                  </div>
                {% endif %}

                {% if settings_items.price_information.enabled and event.price %}
                  <div class="list-item">
                    <div class="list-item-aside">
                        <em class="cnw_searchresult-detail-label">{{ 'event_detail_price'| transTo(preferredLanguage) }}</em>
                        <i class="cnw-fa cnw-fa-eur"></i>
                    </div>
                    <div class="list-item-content cnw_searchresult-price-info">{{ event.price | raw}}</div>
                  </div>
                {% endif %}

                {% if settings.reservation_information.enabled and event.booking_info %}
                  <div class="list-item">
                    <div class="list-item-aside">
                        <em class="cnw_searchresult-detail-label">Reserveringen</em>
                        <i class="cnw-fa cnw-fa-ticket"></i>
                    </div>
                    <div class="list-item-content cnw_searchresult-detail-booking-info">
                      {% if (event.booking_info.phone is defined) %}
                          <p>{{ 'event_detail_phone'| transTo(preferredLanguage) }} <strong>{{ event.booking_info.phone }}</strong></p>
                      {% endif %}
                      {% if (event.booking_info.email is defined) %}
                          <p>{{ event.booking_info.email }}</p>
                      {% endif %}
                      {% if (event.booking_info.url is defined) %}
                          <p><a href="{{ event.booking_info.url.url }}" target="_blank" data-click-tracking-category="detail" data-click-tracking-action="ticket" data-click-tracking-label="{{ event.name }}">{{ event.booking_info.url.label }}</a> </p>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}


                {% if settings_items.facilities is defined and settings_items.facilities.enabled %}
                  <div class="list-item">
                    <div class="list-item-aside">
                        <em class="cnw_searchresult-detail-label">{{ settings_items.facilities.label }}</em>
                        <i class="cnw-fa cnw-fa-wheelchair-alt"></i>
                    </div>
                    <div class="list-item-content">
                        {% include 'widgets/facility-summary.html.twig' with { 'event': event } %}
                    </div>
                  </div>
                {% endif %}
            </div>

            {% if settings_items.labels.enabled and event.labels %}
                <div class="cnw_card-labels">
                    {%  for label in event.labels %}
                        <span class="cnw_search-result-tags-item">{{ label }}</span>
                    {% endfor %}
                </div>
            {% endif %}

            {% if settings_items.read_more.enabled %}

                <a href="{{ event.detail_link }}" class="cnw_btn cnw_btn__card-readmore" data-click-tracking-category="detail" data-click-tracking-action="{{ click_tracking_action }}" data-click-tracking-label="readmore">{{ settings_items.read_more.label }}</a>

            {% endif %}

        </div>
    </div>
</div>
<!--  results - CARD  END -->
